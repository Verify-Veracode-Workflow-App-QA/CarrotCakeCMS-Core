@model CarrotCake.CMS.Plugins.PhotoGallery.Data.GalleryImage

@{
	ViewBag.Title = "View";

	var img = new HtmlTag(HtmlTag.EasyTag.Image);
	img.Uri = Model.GalleryImageName;
}

<h2>@ViewBag.Title</h2>

<div class="row">
	<div class="col-md-10">
		@img.EmitHtmlSelfClosingTag()
	</div>
</div>

@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.GalleryImageId)

		<div class="form-group">
			@Html.LabelFor(model => model.GalleryImageName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.GalleryImageName, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.GalleryImageName, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.ImageOrder, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.ImageOrder, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ImageOrder, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.GalleryId, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.GalleryId, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.GalleryId, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.DisplayNameFor(model => model.GalleryImageName)
</div>