@inject PagePayload CmsPage

@{
	Layout = "_main.cshtml";

	ViewBag.BodyCssClass = "not-homepage";
}

@section Banner {
	<!-- Banner -->
	<div id="banner">
		<div class="container">
		</div>
	</div>
	<!-- /Banner -->
}

<!-- Main -->
<div id="main">
	<div class="container">
		<div class="row">
			<div class="3u">
				@Html.Partial("_pageNav")
			</div>

			<div class="9u skel-cell-important">
				<section>
					<article>
						<header>
							<h2>@CmsPage.Heading</h2>
							@*<span class="byline">Augue praesent a lacus at urna congue rutrum</span>*@
						</header>

						<div>
							@Html.CarrotCakeHtml().RenderWidget("phCenterTop")
						</div>

						@Html.CarrotCakeHtml().RenderBody(TextFieldZone.TextCenter)

						<div>
							@Html.CarrotCakeHtml().RenderWidget("phCenterBottom")
						</div>
					</article>
				</section>
			</div>
		</div>
	</div>
</div>
<!-- Main -->