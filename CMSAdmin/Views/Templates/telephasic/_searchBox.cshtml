@inject PagePayload CmsPage

<section class="sidebar">
	@using (var srchFrm = Html.CarrotCakeHtml().BeginSearchForm(new { @class = "search" })) {
		var srch = srchFrm.GetModelHelper(true);
		<p class="actions">
			@srch.TextBoxFor(x => x.query, new { @class = "search-text", placeholder = "Search" })
		</p>
	}
</section>